<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <View android:id="@+id/phone_intercept_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:background="@drawable/phone_intercept"
        />
    
	<TextView android:id="@+id/phone_name"
	    android:layout_toRightOf="@id/phone_intercept_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#000"
	    android:layout_marginLeft="20dp"
	    />
	
	<TextView android:id="@+id/phone_num"
	    android:layout_toRightOf="@id/phone_intercept_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/phone_name"
	    android:textColor="#000"
	    android:layout_marginLeft="20dp"
	    />
	
	<TextView android:id="@+id/phone_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/phone_name"
	    android:textColor="#000"
	    android:layout_marginLeft="30dp"
	    />
</RelativeLayout>