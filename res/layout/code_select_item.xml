<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical" >
    <ImageView
        android:id="@+id/lock_item_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_launcher"
        android:contentDescription="@string/flow_item_img"
        android:gravity="center" />
    <TextView
        android:id="@+id/lock_item_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/lock_text_color"
        android:textSize="15sp"
        android:textStyle="bold" />
    <CheckBox
        android:id="@+id/lock_item_select"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:button="@drawable/checkbox"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/lock_item_package"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/lock_text_color" />
</LinearLayout>
